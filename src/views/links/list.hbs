<div class="container p-4">
    <div class="row">
        {{#each productos}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                     </h3>
                    <p class="m-2">{{precio}}$</p>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/vapebro/delete/{{id}}">
                        Delete product
                    </a>
                    <a class="btn btn-secondary" href="/vapebro/edit/{{id}}">
                        Edit
                    </a>
                    <a class="btn btn-outline-secondary" href="/vapebro/plus/{{id}}">
                        +
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not products saved yet.</p>
                <a href="/vapebro/add">Add One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>