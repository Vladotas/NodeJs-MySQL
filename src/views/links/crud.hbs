<div class="container p-4">
    <div class="row">
        {{#each users}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{fullname}}
                     </h3>
                    <p class="m-2">{{username}}</p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-outline-danger" href="/vapebro/deleteUs/{{id}}">
                        Delete user
                    </a>
                    <a class="btn btn-outline-secondary" href="/vapebro/edit/{{id}}">
                        Edit
                    </a>
                    <a class="btn btn-outline-secondary" href="/vapebro/rol/{{id}}">admin
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>